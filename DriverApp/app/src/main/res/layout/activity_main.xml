<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context="com.vanessaodawo.driverapp.MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DODO APP : DRIVER"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/gSignUp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border"
        android:layout_centerInParent="true"
        android:text="Connect with Google"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/fSignUp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/gSignUp"
        android:layout_marginTop="10dp"
        android:text="Connect with facebook"
        android:textColor="@android:color/white"
        android:background="@drawable/button_border"/>

    <Button
        android:id="@+id/emailSignUp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/fSignUp"
        android:layout_marginTop="10dp"
        android:text="Sign up with Email"
        android:textColor="@android:color/white"
        android:background="@drawable/button_border"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="71dp"
            android:layout_marginStart="71dp"
            android:text="ALREADY HAVE AN ACCOUNT?  " />

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN."
            android:layout_toRightOf="@+id/lbl"
            android:clickable="true"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

</RelativeLayout>
